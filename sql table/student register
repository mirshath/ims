CREATE TABLE students (
    student_code VARCHAR(20) PRIMARY KEY,
    title ENUM('Mr', 'Mrs', 'Ms', 'Dr', 'Prof') NOT NULL,
    first_name VARCHAR(50) NOT NULL,
    last_name VARCHAR(50) NOT NULL,
    certificate_name VARCHAR(100),
    preferred_name VARCHAR(50),
    date_of_birth DATE,
    nationality VARCHAR(50),
    permanent_address TEXT,
    current_address TEXT,
    mobile VARCHAR(20),
    telephone VARCHAR(20),
    emergency_contact_name VARCHAR(100),
    emergency_contact_number VARCHAR(20),
    english_ability BOOLEAN,
    minimum_entry_qualification BOOLEAN,
    nic VARCHAR(20),
    passport VARCHAR(20),
    personal_email VARCHAR(100),
    bms_email VARCHAR(100),
    occupation VARCHAR(100),
    organization VARCHAR(100),
    previous_organization VARCHAR(100),
    qualifications SET('Bachelors', 'Masters', 'Diploma', 'CBM', 'A/L', 'PGDip', 'IFD', 'O/L'),
    active BOOLEAN DEFAULT FALSE
);
